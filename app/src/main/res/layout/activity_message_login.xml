<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_margin="15dp"
        android:src="@drawable/exitbtn"
        />

    <!--第一行字-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="手机号登录"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="22sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="22dp"
            android:text="国家/地区"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="中国大陆(+86)"
            android:textSize="22sp"
            android:textColor="@color/color2"/>

    </LinearLayout>

    <!--分割线-->
    <TextView
        android:background="@color/color3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"/>


    <!--输入电话行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:id="@+id/message_login_inputnumber_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="22sp"
            android:hint="请输入电话号码"/>
    </LinearLayout>

    <!--分割线-->
    <TextView
        android:background="@color/color3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"/>


    <!--输入密码行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:id="@+id/message_login_inputchecknumber_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="18dp"
            android:textSize="22sp"
            android:inputType="textPassword"
            android:hint="请输入验证码    "/>

        <Button
            android:id="@+id/sendmessage_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="获取验证码"
           android:textSize="12sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--同意用户协议-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/number_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号登录"
            android:clickable="true"
            android:textColor="@color/color4"
            android:textSize="17sp"
            />
    </LinearLayout>


    <!--登录按钮-->
    <Button
        android:id="@+id/login_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/loginbtnclick"
        android:text="登录"
        android:textSize="22sp"/>

    <!--底部那行文本-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="15dp"
        >
        <!--自定义底部文本控件-->
        <com.example.title.BottomTextLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>



</LinearLayout>