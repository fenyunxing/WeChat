<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/bottom_btn_background"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/wechat_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/wechat_icon"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:background="@drawable/wechat_press"
            />
        <TextView
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/wechat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="微信"
            android:textColor="@color/bottom_title_text_press"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/wechat_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/contact_icon"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/contact_normal"
            />
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通讯录"
            android:textColor="@color/bottom_title_text_color"
            android:textSize="11sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/wechat_discover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/discover_icon"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/discover_normal"
            />
        <TextView
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/discover_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现"
            android:textColor="@color/bottom_title_text_color"
            android:textSize="11sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/wechat_mine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/mine_icon"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/my_normal"
            />
        <TextView
            android:layout_marginBottom="3dp"
            android:id="@+id/mine_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我"
            android:textColor="@color/bottom_title_text_color"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>